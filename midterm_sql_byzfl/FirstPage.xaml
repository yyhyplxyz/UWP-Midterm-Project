<Page
    x:Class="midterm_sql_byzfl.FirstPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:midterm_sql_byzfl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Name="mygrid">


        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Title" Text="欢迎来到餐饮管理系统" FontSize="40" TextAlignment="Center"/>
            <TextBlock x:Name="UserNameText" FontSize="28" TextAlignment="Center" Foreground="Black"/>
            <Button x:Name="NormalLoginButton" Content="账号密码登录" Click="NormalLoginButton_Click"
            HorizontalAlignment="Center" Margin="0,20" Foreground="White" Background="DodgerBlue"/>
            <Button x:Name="DeviceLoginButton" Content="设备登录" Click="DeviceLoginButton_Click"
            Foreground="White"
            Background="Gray"
            HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
